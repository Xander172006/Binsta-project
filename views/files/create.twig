{% extends 'app.twig' %}

{% block content %}
<script src="/views/javascript/script.js" defer></script>

<main class="create_template">
  <h1 class="create_codesnippet">codesnippet aanmaken</h1>

  <section class="create_section">
    <form class="uploadForm"  action="" method="POST" enctype="multipart/form-data">

      <div class="snippet_element temp" id="beforeUpload">
        <div class="template_uploadImg">
          <div class="textAndIcon">
            <input type="file" id="fileImg" name="fileImg" onchange="previewImage()">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-plus-square create_icon" viewBox="0 0 16 16">
              <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
              <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
          </div>


          <div class="createImage_template temp2">
            <img class="makeImage" id="preview" src="" style="display: none;" alt="example codeImage">
          </div>
      </div>
    </div>

    <div class="create_snippets">

        <div class="current_user">
          {% if image.profile %}
          <img class="profile_user" src="/uploads/{{ image.profile }}" alt="profile_user" width="50px">
          {% else %}
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
              </svg>
          {% endif %}
          <p class="name">{{ user.gebruikersnaam }}</p>
        </div>

        <div class="post_form">
          <label class="input_name" for="title">Title of post</label>
          <input class="title_input" type="text" id="title" name="postTitle">

          <label class="input_name" for="desc">Description of post</label>
          <textarea class="post_description" name="post_description" id="desc" cols="30" rows="4"></textarea>

          <label class="input_name" for="language">programming language</label>
          <input class="program_language" type="text" id="language" name="language">

          <button class="postButton" type="submit" name="createPost">Create Post</button>
        </div>
    </div>

  </form>
</section>
</main>
{% endblock %}